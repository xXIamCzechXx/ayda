{% extends 'base.html.twig' %}

{% block title %}Statistics{% endblock %}

{% block body %}
    <div class="container-fluid px-2 px-md-4" style="min-height: calc(100vh - 200px);">
        <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
            <span class="mask  bg-gradient-primary  opacity-6"></span>
        </div>
        <div class="card card-body mx-3 mx-md-4 mt-n6 blur shadow-blur">
            <div class="container-fluid py-3">
                <div class="row mb-5">
                    <div class="col-lg-3">
                        <div class="card position-sticky top-1">
                            <ul class="nav flex-column bg-white border-radius-lg p-3">
                                <li class="nav-item">
                                    <a class="nav-link text-dark d-flex" data-scroll="" href="#profile">
                                        <i class="material-icons text-lg me-2">person</i>
                                        <span class="text-sm">Profile</span>
                                    </a>
                                </li>
                                <li class="nav-item pt-2">
                                    <a class="nav-link text-dark d-flex" data-scroll="" href="#basic-info">
                                        <i class="material-icons text-lg me-2">receipt_long</i>
                                        <span class="text-sm">Basic Info</span>
                                    </a>
                                </li>
                                <li class="nav-item pt-2">
                                    <a class="nav-link text-dark d-flex" data-scroll="" href="#password">
                                        <i class="material-icons text-lg me-2">lock</i>
                                        <span class="text-sm">Change Password</span>
                                    </a>
                                </li>
                                <li class="nav-item pt-2">
                                    <a class="nav-link text-dark d-flex" data-scroll="" href="#delete">
                                        <i class="material-icons text-lg me-2">delete</i>
                                        <span class="text-sm">Delete Account</span>
                                    </a>
                                </li>
                                <li class="nav-item pt-2">
                                    <a class="nav-link text-dark d-flex" data-scroll="" href="#2fa">
                                        <i class="material-icons text-lg me-2">security</i>
                                        <span class="text-sm"><del>2FA</del></span>
                                    </a>
                                </li>
                                <li class="nav-item pt-2">
                                    <a class="nav-link text-dark d-flex" data-scroll="" href="#accounts">
                                        <i class="material-icons text-lg me-2">badge</i>
                                        <span class="text-sm"><del>Accounts</del></span>
                                    </a>
                                </li>
                                <li class="nav-item pt-2">
                                    <a class="nav-link text-dark d-flex" data-scroll="" href="#notifications">
                                        <i class="material-icons text-lg me-2">campaign</i>
                                        <span class="text-sm"><del>Notifications</del></span>
                                    </a>
                                </li>
                                <li class="nav-item pt-2">
                                    <a class="nav-link text-dark d-flex" data-scroll="" href="#sessions">
                                        <i class="material-icons text-lg me-2">settings_applications</i>
                                        <span class="text-sm"><del>Sessions</del></span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-9 mt-lg-0 mt-4">
                        <!-- Card Profile -->
                        <div class="card card-body" id="profile">
                            <div class="row justify-content-center align-items-center">
                                <div class="col-sm-auto col-4" style="width: 120px;">
                                    <div class="avatar avatar-xl position-relative m-0 p-0">
                                        <div class="input-group input-group-dynamic mt-4 p-0" style="margin-left: 20px; width: 200px;">
                                            {% include 'form/component/dropzone/form.html.twig' with {
                                                'url': path('app_file_upload', {'folder': 'user', 'userId': app.user.id}),
                                                'maxFiles': 1,
                                                'image': app.user.avatarPath,
                                                'class': 'my-account-image'
                                            } %}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-auto col-8 my-auto">
                                    <div class="h-100">
                                        <h5 class="mb-1 font-weight-bolder">
                                            {{ app.user.name }}
                                        </h5>
                                        <p class="mb-0 font-weight-normal text-sm">
                                            CEO / Co-Founder
                                        </p>
                                    </div>
                                </div>
                                <div class="col-sm-auto ms-sm-auto mt-sm-0 mt-3 d-flex">
                                    <label class="form-check-label mb-0">
                                        <small id="profileVisibility">
                                            Switch to invisible
                                        </small>
                                    </label>
                                    <div class="form-check form-switch ms-2 my-auto">
                                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault23" {{ app.user.active ? 'checked' : '' }} disabled onchange="visible()">
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_start(form) }}
                            <!-- Card Basic Info -->
                            <div class="card mt-4" id="basic-info">
                                <div class="card-header">
                                    <h5>Basic Info</h5>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-5">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.firstName) }}
                                                {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.firstName) }}
                                            </div>
                                        </div>
                                        <div class="col-5">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.lastName) }}
                                                {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.lastName) }}
                                            </div>
                                        </div>
                                        <div class="col-2">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.degree) }}
                                                {{ form_widget(form.degree, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.degree) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-4">
                                        <div class="col-4">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.email) }}
                                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.email) }}
                                            </div>
                                        </div>
                                        <div class="col-md-3 align-self-center">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.currency) }}
                                                {{ form_widget(form.currency, {'attr': {'class': 'form-control single-choices'}}) }}
                                                {{ form_errors(form.currency) }}
                                            </div>
                                        </div>
                                        <div class="col-md-3 align-self-center">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.lang) }}
                                                {{ form_widget(form.lang, {'attr': {'class': 'form-control single-choices'}}) }}
                                                {{ form_errors(form.lang) }}
                                            </div>
                                        </div>
                                        <div class="col-md-2 align-self-center">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.birthDate) }}
                                                {{ form_widget(form.birthDate, {'attr': {'class': 'form-control date-input'}}) }} {# Also "select2" class works #}
                                                {{ form_errors(form.birthDate) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-4">
                                        <div class="col-md-2 align-self-center">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.monthlyHours) }}
                                                {{ form_widget(form.monthlyHours, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.monthlyHours) }}
                                            </div>
                                        </div>
                                        <div class="col-md-2 align-self-center">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.hourlyWage) }}
                                                {{ form_widget(form.hourlyWage, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.hourlyWage) }}
                                            </div>
                                        </div>
                                        <div class="col-md-2 align-self-center">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.holidayHours) }}
                                                {{ form_widget(form.holidayHours, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.holidayHours) }}
                                            </div>
                                        </div>
                                        <div class="col-md-6 align-self-center">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.roles) }}
                                                {{ form_widget(form.roles, {'attr': {'class': 'form-control multiple-choices'}}) }} {# Also "select2" class works #}
                                                {{ form_errors(form.roles) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-4">
                                        <div class="col-md-6">
                                            {{ form_label(form.appSidebarType) }}
                                            {{ form_widget(form.appSidebarType, {'attr': {'class': 'form-control single-choices'}}) }}
                                            {{ form_errors(form.appSidebarType) }}
                                        </div>
                                        <div class="col-md-6">
                                            {{ form_label(form.appDesign) }}
                                            {{ form_widget(form.appDesign, {'attr': {'class': 'form-control single-choices'}}) }}
                                            {{ form_errors(form.appDesign) }}
                                        </div>
                                    </div>
                                    <div class="row mt-4">
                                        <div class="col-md-12 form-check form-switch m-2">
                                            {{ form_label(form.appSidebarSpread) }}
                                            {{ form_widget(form.appSidebarSpread, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_errors(form.appSidebarSpread) }}
                                        </div>
                                    </div>
                                    <div class="row mt-4">
                                        <div class="col-md-12 align-self-center">
                                            {{ form_label(form.description) }}
                                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.description) }}
                                        </div>
                                    </div>
                                    <button type="submit" class="btn bg-gradient-light btn-sm float-end mt-3 mb-0">Update</button>
                                </div>
                            </div>
                            <div class="card mt-4" id="accounts">
                                <div class="card-header">
                                    <h5>Address</h5>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.address.streetName) }}
                                                {{ form_widget(form.address.streetName, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.address.streetName) }}
                                            </div>
                                        </div>
                                        <div class="col-2">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.address.streetNumber) }}
                                                {{ form_widget(form.address.streetNumber, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.address.streetNumber) }}
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.address.city) }}
                                                {{ form_widget(form.address.city, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.address.city) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-4">
                                        <div class="col-4">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.address.phone) }}
                                                {{ form_widget(form.address.phone, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.address.phone) }}
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.address.zip) }}
                                                {{ form_widget(form.address.zip, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.address.zip) }}
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="input-group input-group-static">
                                                {{ form_label(form.address.country) }}
                                                {{ form_widget(form.address.country, {'attr': {'class': 'form-control single-choice'}}) }}
                                                {{ form_errors(form.address.country) }}
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn bg-gradient-light btn-sm float-end mt-3 mb-0">Update</button>
                                </div>
                            </div>
                        {{ form_end(form) }}

                        <div class="row mt-4" id="accounts">
                            <div class="col-xl-6 col-md-6 mb-xl-0 mb-4">
                                <div class="card bg-transparent shadow-xl">
                                    <div class="overflow-hidden position-relative border-radius-xl">
                                        <img src="{{ asset('build/images/material-dashboard/illustrations/pattern-tree.svg') }}" class="position-absolute opacity-2 start-0 top-0 w-100 z-index-1 h-100" alt="pattern-tree">
                                        <span class="mask bg-gradient-dark opacity-10"></span>
                                        <div class="card-body position-relative z-index-1 p-3">
{#                                            <i class="material-icons text-white p-2">wifi</i>#}
                                            <p class="text-white">Bankovní spojení</p>
                                            <h5 class="text-white mt-4 mb-5 pb-2">4562&nbsp;&nbsp;&nbsp;1122&nbsp;&nbsp;&nbsp;4594&nbsp;&nbsp;&nbsp;7852</h5>
                                            <div class="d-flex">
                                                <div class="d-flex">
                                                    <div class="me-4">
                                                        <p class="text-white text-sm opacity-8 mb-0">Držitel účtu</p>
                                                        <h6 class="text-white mb-0">{{ app.user.name }}</h6>
                                                    </div>
                                                    <div>
                                                        <p class="text-white text-sm opacity-8 mb-0">Kód banky</p>
                                                        <h6 class="text-white mb-0">0800</h6>
                                                    </div>
                                                </div>
                                                <div class="ms-auto w-20 d-flex align-items-end justify-content-end">
                                                    <img class="w-60 mt-2" src="{{ asset('build/images/material-dashboard/img/logos/mastercard.png') }}" alt="logo">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 col-md-6">
                                <div class="row">
                                    <div class="col-md-6 col-6">
                                        <div class="card">
                                            <div class="card-header mx-4 p-3 text-center">
                                                <div class="icon icon-shape icon-lg bg-gradient-primary shadow text-center border-radius-lg" style="margin: 0 auto;">
                                                    <i class="material-icons opacity-10">account_balance</i>
                                                </div>
                                            </div>
                                            <div class="card-body pt-0 p-3 text-center">
                                                <h6 class="text-center mb-0">Salary</h6>
                                                <span class="text-xs">Belong Interactive</span>
                                                <hr class="horizontal dark my-3">
                                                <h5 class="mb-0">+$2000</h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-6">
                                        <div class="card">
                                            <div class="card-header mx-4 p-3 text-center">
                                                <div class="icon icon-shape icon-lg bg-gradient-primary shadow text-center border-radius-lg" style="margin: 0 auto;">
                                                    <i class="material-icons opacity-10">account_balance_wallet</i>
                                                </div>
                                            </div>
                                            <div class="card-body pt-0 p-3 text-center">
                                                <h6 class="text-center mb-0">Paypal</h6>
                                                <span class="text-xs">Freelance Payment</span>
                                                <hr class="horizontal dark my-3">
                                                <h5 class="mb-0">$455.00</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 mb-lg-0 mb-4">
                                <div class="card mt-4">
                                    <div class="card-header pb-0 p-3">
                                        <div class="row">
                                            <div class="col-6 d-flex align-items-center">
                                                <h6 class="mb-0">Payment Method</h6>
                                            </div>
                                            <div class="col-6 text-end">
                                                <a class="btn bg-gradient-dark mb-0" href="javascript:;"><i class="material-icons text-sm">add</i>&nbsp;&nbsp;Add New Card</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body p-3">
                                        <div class="row">
                                            <div class="col-md-6 mb-md-0 mb-4">
                                                <div class="card card-body border card-plain border-radius-lg d-flex align-items-center flex-row">
                                                    <img class="w-10 me-3 mb-0" src="{{ asset('build/images/material-dashboard/img/logos/mastercard.png') }}" alt="logo">
                                                    <h6 class="mb-0">****&nbsp;&nbsp;&nbsp;****&nbsp;&nbsp;&nbsp;****&nbsp;&nbsp;&nbsp;7852</h6>
                                                    <i class="material-icons ms-auto text-dark cursor-pointer" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Card">edit</i>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="card card-body border card-plain border-radius-lg d-flex align-items-center flex-row">
                                                    <img class="w-10 me-3 mb-0" src="{{ asset('build/images/material-dashboard/img/logos/visa.png') }}" alt="logo">
                                                    <h6 class="mb-0">****&nbsp;&nbsp;&nbsp;****&nbsp;&nbsp;&nbsp;****&nbsp;&nbsp;&nbsp;5248</h6>
                                                    <i class="material-icons ms-auto text-dark cursor-pointer" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Card">edit</i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Card Change Password -->
                        {% include 'security/password.html.twig' %}

                        <!-- Card Delete Account -->
                        <div class="card mt-4" id="delete">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-sm-0 mb-4">
                                    <div class="w-50">
                                        <h5>Delete Account</h5>
                                        <p class="text-sm mb-0">Once you delete your account, there is no going back. Please be certain.</p>
                                    </div>
                                    <div class="w-50 text-end">
