                                        <button class="btn bg-gradient-danger mb-0 ms-2" type="button" name="button">Delete Account</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}