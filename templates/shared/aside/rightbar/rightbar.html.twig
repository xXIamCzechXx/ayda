{#                </div>#}
{#            </div>#}
            <hr class="horizontal dark my-3">
            <div class="mt-2 d-flex">
                <h6 class="mb-0">Sidenav Mini</h6>
                <div class="form-check form-switch ps-0 ms-auto my-auto">
                    <input class="form-check-input mt-1 ms-auto" checked="checked" type="checkbox" id="navbarMinimize" data-action="click->hello#navbarMinimize">
                </div>
            </div>
            <hr class="horizontal dark my-3">
            <div class="mt-2 d-flex">
                <h6 class="mb-0">Light / Dark</h6>
                <div class="form-check form-switch ps-0 ms-auto my-auto" data-controller="darkmode">
                    <input class="form-check-input mt-1 ms-auto" type="checkbox" id="dark-version" data-action="click->darkmode#darkMode">
                </div>
            </div>
            <hr class="horizontal dark my-sm-4">
            <a class="btn bg-gradient-info w-100" href="javascript:">Nastavení</a>
            <a class="btn btn-outline-dark w-100" href="javascript:">Dokumentace</a>
            <div class="w-100 text-center">
                <a class="github-button" href="https://github.com/creativetimofficial/material-dashboard" data-icon="octicon-star" data-size="large" data-show-count="true" aria-label="Star creativetimofficial/material-dashboard on GitHub">Star</a>
                <h6 class="mt-3">Rychlý výběr</h6>
                <a href="javascript:" class="btn btn-dark mb-0 me-2">
                    Odhlásit se
                </a>
                <a href="javascript:" class="btn btn-dark mb-0 me-2">
                    Ukončit
